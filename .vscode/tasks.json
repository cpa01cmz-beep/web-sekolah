{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Build Artifacts",
      "type": "npm",
      "script": "clean",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Dev Server",
      "type": "npm",
      "script": "dev",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build",
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
    {
      "label": "Typecheck",
      "type": "npm",
      "script": "typecheck",
      "problemMatcher": ["$tsc"],
      "group": "test"
    },
    {
      "label": "Lint",
      "type": "npm",
      "script": "lint",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Run Tests",
      "type": "npm",
      "script": "test:run",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Run Changed Tests Only",
      "type": "npm",
      "script": "test:changed",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Run Tests with Coverage",
      "type": "npm",
      "script": "test:coverage",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Validate (Typecheck + Lint + Test)",
      "type": "npm",
      "script": "validate",
      "problemMatcher": [],
      "group": "test",
      "dependsOn": ["Typecheck", "Lint", "Run Tests"]
    }
  ]
}
